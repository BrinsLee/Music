<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".fragment.MusicLrcFragment">


    <com.brins.musicdetail.widget.LrcView
        android:id="@+id/lrc_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:lrcAnimationDuration="1000"
        app:lrcCurrentTextColor="@color/white"
        app:lrcDividerHeight="20dp"
        app:lrcLabel="暂无歌词"
        app:lrcNormalTextColor="@color/white_60"
        app:lrcNormalTextSize="15sp"
        app:lrcPadding="10dp"
        app:lrcTextGravity="left"
        app:lrcTextSize="20sp"
        app:lrcTimeTextColor="@color/white_60"
        app:lrcTimelineColor="#80BDBDBD"
        app:lrcTimelineTextColor="@color/white" />

</FrameLayout>