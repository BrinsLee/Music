<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CommonHeaderView">
        <attr name="chv_title" format="string" />
        <attr name="chv_back" format="boolean" />
        <attr name="chv_text_color" format="color" />
        <attr name="chv_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="RoundConstraintLayout">
        <attr name="round_corner" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_show" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!--圆角或者圆形图片组件-->
    <declare-styleable name="CircleImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="es_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>
</resources>