<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/base_bg_15dp_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/permission_title"
            android:textColor="@color/default_btn_text"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/permission_subtitle"
            android:textColor="@color/default_btn_text"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/iv_tips"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/base_icon_default_avatar" />

            <TextView
                android:id="@+id/tv_permissionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_tips"
                android:textColor="@color/default_btn_text"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_permission_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_permissionName"
                android:layout_alignLeft="@id/tv_permissionName"
                android:layout_marginTop="4dp"
                android:textColor="@color/default_btn_text"
                android:textSize="11dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.48dp"
            android:background="@color/textcolor_e6e4dd" />

        <TextView
            android:id="@+id/tv_permission_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@string/permission_next"
            android:textColor="@color/color_29a2fb"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>