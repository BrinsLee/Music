<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bottom_cover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/base_icon_default_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="50dp" />

    <com.brins.baselib.widget.RoundCoverProgress
        android:id="@+id/cover_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_cover"
        app:layout_constraintEnd_toEndOf="@id/bottom_cover"
        app:layout_constraintStart_toStartOf="@id/bottom_cover"
        app:layout_constraintTop_toTopOf="@id/bottom_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>